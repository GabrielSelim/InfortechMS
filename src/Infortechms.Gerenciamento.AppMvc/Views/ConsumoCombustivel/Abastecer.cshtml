@model Infortechms.Gerenciamento.AppMvc.ViewModels.ConsumoCombustivelViewModel

@{
    ViewBag.Title = "Abastecer";
}

<h2>Abastecer</h2>


@using (Html.BeginForm("Abastecer", "ConsumoCombustivel", FormMethod.Post, new { id = "consumoCombustivelForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>
            Digite a quantidade de Litros que deseja Inserir no Tanque.
        </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.NumeroSerie, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumeroSerie, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumeroSerie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CapacidadeCombustivel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CapacidadeCombustivel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CapacidadeCombustivel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CombustivelAtual, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CombustivelAtual, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CombustivelAtual, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Abastecer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar a Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        //if ($('#CapacidadeCombustivel').val() < $('#CombustivelAtual').val()) {
        //    alert("O campo Combustivel Atual não pode ser maior que a Capacidade de Combustivel")
        //}

        $('#consumoCombustivelForm').submit(function () {
            const litros = $('#CapacidadeCombustivel').val();
            $('#CapacidadeCombustivel').val(litros.replace(".", ","));
        });
        $('#CapacidadeCombustivel').attr("data-val-number", "Litros em formato invalido");

        $('#consumoCombustivelForm').submit(function () {
            const litros = $('#CombustivelAtual').val();
            $('#CombustivelAtual').val(litros.replace(".", ","));
        });
        $('#CombustivelAtual').attr("data-val-number", "Litros em formato invalido");

        $('#NumeroSerie').prop('readonly', 'readonly')
        $('#Nome').prop('readonly', 'readonly')
        $('#CapacidadeCombustivel').prop('readonly', 'readonly')

    </script>


}
